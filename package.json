{
  "name": "buzzwords",
  "version": "1.3.0",
  "description": "List of (possible) English buzzwords",
  "license": "MIT",
  "keywords": [
    "buzzword",
    "word",
    "list"
  ],
  "repository": "words/buzzwords",
  "bugs": "https://github.com/words/buzzwords/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "main": "index.json",
  "files": [
    "index.json"
  ],
  "dependencies": {},
  "devDependencies": {
    "bail": "^1.0.1",
    "browserify": "^16.0.0",
    "concat-stream": "^2.0.0",
    "hast-util-select": "^3.0.0",
    "hast-util-to-string": "^1.0.0",
    "prettier": "^1.17.1",
    "rehype-parse": "^6.0.0",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^5.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.5.0",
    "unified": "^7.0.0",
    "xo": "^0.24.0"
  },
  "scripts": {
    "generate": "node build",
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify index.json -s buzzwords -o buzzwords.js",
    "build-mangle": "browserify index.json -s buzzwords -p tinyify -o buzzwords.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test": "npm run format && npm run build && npm run test-api"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "ignores": [
      "buzzwords.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
